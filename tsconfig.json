{
  "compilerOptions": {
    "target": "es5",                          
    "module": "commonjs",                     
    "lib": ["ES6"],
    "types": ["node"],
    "allowJs": true,                       
    "checkJs": true,                       
    "sourceMap": true,                     
    "outDir": "dist",                        
    "rootDir": "src",                      
    "strict": true,
    "noImplicitAny": true,
    "esModuleInterop": true,               
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  }
}
